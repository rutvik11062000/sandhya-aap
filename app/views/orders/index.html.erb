


<div class="row">
  <div class="col-sm-6">
    <h1>Orders</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_order_path, class: 'btn btn-primary' do %>
    Add New Order
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
            <th>Sr. No.</th>
            <th>Documents</th>
            <th>Customer</th>
            <th>Created At</th>
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @orders.each_with_index do |order, index| %>
        <%= content_tag :tr, id: dom_id(order), class: dom_class(order) do %>
          <td>
            <%= link_to "#{index+1}", order %>
          </td>
            <td>
              <% order.documents.each_with_index do |document, index| %>
                <%= link_to "document #{index + 1}", document %>
              <% end %> 
            </td>
            <td><%= link_to order.customer %></td>
            <td><%= order.created_at.in_time_zone("Mumbai") %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
