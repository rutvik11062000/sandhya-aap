<%= content_tag :div, class: "nested-fields" do %>
  <div class="row">
    <div class="col-sm">
      <%= f.label "Type : ", class: 'form-label' %>
      <%= f.collection_select(:name, Product.all, :id, :name, :prompt => 'Select') %>
    </div>
    <div class="col-sm">
      <%= f.label :Unit, class: 'form-label' %>
      <%= f.select :unit, [["PCS", "PCS"]] %>
    </div>
  </div>
  <div class="row">

    <div class="col-sm">
      <%= f.label :QTY, class: 'form-label' %>
    <%= f.number_field :quantity, class: 'form-control' %>
    </div>
    <div class="col-sm">
      <%= f.label "Amount in RS.", class: 'form-label' %>
      <%= f.number_field :amount, class: 'form-control' %>
    </div>
  </div>
  <small><%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" } %></small>
  <%= f.hidden_field :_destroy %>
<hr>
<% end %>