<div class="page-header">
  <%= link_to customers_path, class: 'btn btn-default' do %>
    All Customers
  <% end %>
  <%= link_to edit_customer_path(@customer), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show customer</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @customer.name %></dd>
  <dt>Address:</dt>
  <dd><%= @customer.address %></dd>
  <dt>Phone:</dt>
  <dd><%= @customer.phone %></dd>
</dl>
